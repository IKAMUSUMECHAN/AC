<!--pages/video/video.wxml-->
<view class="video_container">
<video id="myvideo" src="http://boilinggame.cn/classv/class1.mp4" controls='true' danmu-btn='true' enable-danmu='true' danmu-list='{{danmulist}}'></video>
<button class="btn" bindtap='playVideo'>播放</button>
<button class="btn" bindtap='stopVideo'>暂停</button>
</view>
<form>
<view class="danmuGrop">
  <input type="text" class="danmuinput" placeholder='说点什么吧~~~' bindblur='getInput'></input>
  <button class="sendDanmu" bindtap='sendDanmu' form-type='reset'>发送</button>
</view>
</form>
