/* pages/home/home.wxss */
.topbox{
  display: flex;
  width: 100%;
  height: 230rpx;
  background-image: url("https://boilinggame.cn/sunny-bg.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.topbtn{
  position: relative;
  width: 120rpx;
  height: 100rpx;
  top: 55rpx;
  left: 60rpx;
}
.toptextbox{
   position: relative;
  	top: 160rpx;
	  left: 40rpx;
}
.userinfo-avatar {
	  position: relative;
	  top: 15rpx;
	  left: 300rpx;
  	width: 120rpx;
  	height: 120rpx;
  	border-radius: 50%;
  	border: 3rpx solid #fff;
}
/*头部*/
.headerView{
    display: flex;
    flex-direction: column;
    background: rgb(239, 252, 61);
    padding: 30px 0 30px 10px;
    /*子控件居中显示*/
    align-items: center; 
}

/*头像*/
.headerView .picture{
height: 70px;
width: 70px;
margin-bottom: 15px;
border-radius:50%;
}

 /*名字*/
 .headerView .name{
     color: white;
 }

/*表格*/
.item{
    display: flex;
    flex-direction: row;
    padding: 10px ;
    background: white;
    border-bottom: 0.5px solid lightgrey;
}

/*图标*/
.item .icon{
    width: 26px;
    height: 26px;
    margin-right: 10px;
}

/*文字*/
.item label{
    margin: 5px 0 0 10px; 
    font-size: 15px;

    /*撑开label两边部分的距离*/
    flex: 1;

    /*垂直居中*/
    margin: auto; 
}

/*箭头*/
.item .arrow{
     width: 8px;
    height: 9px;
   margin: auto; 
}

.item .line{
    background: lightgray;
    height: 0.5px;
}

.table {
  border: 0px solid darkgray;
  font-size: 12px;
  background: rgba(51, 102, 255, 0.5);
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
 
.th {
  width: 40%;
  justify-content: center;
  background: rgba(51, 102, 255, 0.925);
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}


.weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 110rpx;
}
.weather-bg{
  position: absolute;
  background: #ccc;
  top:0;
  left: 0;
  width: 100%;
  height: 300rpx;
  z-index: -1
}

.temp{
  text-align: center;
  font-size: 120rpx;
  line-height: 280rpx;
  opacity: .8
}
.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: .65
}
.forecast-list{
  display: flex;
  align-items:center;
  height: 75px;
}
.forecast-item{
  flex: 1;
  text-align: center;
  border-right: 1px solid rgba(255, 255, 255, .9)
}
.forecast-item:last-child{
  border: none
}
.forecast-item-title,.forecast-item-content{
  display: block;
  width: 100%;
  
}
.forecast-item-title{
  font-size: 40rpx;
  color: rgba(0, 0, 0, .6);
   line-height: 80rpx
}
.forecast-item-content{
  font-size: 37rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, .5);
  padding-bottom: 10rpx
}
.tipBar{
  margin-top: 40rpx
}
.tip-titleBar{
  position: relative;
  width: 100%;
  height: 70rpx;
}
.tip-titleBar::after{
  content: '';
  display: block;
  clear: both;
  position: absolute;
  height: 1rpx;
  bottom: -8rpx;
  left:15rpx;
  right: 15rpx;
  background: #ccc;
}
.tip-titleBar-img{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 3rpx;
  top: 0
  
}
.tip-title{
  display: inline-block;
  font-size: 45rpx;
  line-height: 70rpx;
  text-indent: 73rpx;
  color: rgba(0, 0, 0, .8)
}
.tip-content{
  padding: 20rpx 10rpx 0;
  display: inline-block;
  font-size: 35rpx;
  font-weight: 100;
  text-indent: 70rpx;
  line-height: 55rpx;

}